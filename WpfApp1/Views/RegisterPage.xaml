<Page x:Class="WpfApp1.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage"
      Background="White">

    <Grid Margin="20">
        <!-- Powrót w lewym górnym rogu -->
        <Button Content="Powrót" Click="BackButton_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Padding="10,5" Margin="0,0,0,0" />

        <StackPanel Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Email" Foreground="Gray" Margin="0,0,0,2"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Hasło" Foreground="Gray" Margin="0,0,0,2"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Potwierdź hasło" Foreground="Gray" Margin="0,0,0,2"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Zarejestruj" Height="30" Click="RegisterButton_Click" Margin="0,10,0,0"/>

            <TextBlock x:Name="MessageText" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
